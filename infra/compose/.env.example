# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_postgres
POSTGRES_DB=tessdental
POSTGRES_PORT=5432

# Hasura
HASURA_PORT=8080
HASURA_GRAPHQL_ADMIN_SECRET=change_me_admin_secret

# JWT (for Hasura and Auth service)
JWT_SECRET=change_me_jwt_secret_key_min_32_chars
JWT_ISSUER=tessdental
JWT_AUDIENCE=tessdental

# Auth Service

# --- MinIO (dev local S3) ---
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_me_minio
MINIO_BUCKET=tess-imaging
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Imaging Service
IMAGING_PORT=4010

# Storage backend toggle:
# dev: s3
# prod: nfs
IMAGING_STORAGE_BACKEND=s3

# S3 (MinIO) config
IMAGING_S3_ENDPOINT=http://minio:9000
IMAGING_S3_REGION=us-east-1
IMAGING_S3_BUCKET=tess-imaging
IMAGING_S3_ACCESS_KEY_ID=minioadmin
IMAGING_S3_SECRET_ACCESS_KEY=change_me_minio
IMAGING_S3_FORCE_PATH_STYLE=true

# NFS config (prod)
# Inside container
IMAGING_NFS_BASE_DIR=/data/imaging
# Host mount path on your Linux server (the Synology NFS mount)
IMAGING_HOST_MOUNT_DIR=/mnt/tess-imaging

# Hasura GraphQL URL (for imaging-service)
HASURA_GRAPHQL_URL=http://hasura:8080/v1/graphql

# Operational settings
IMAGING_MAX_UPLOAD_MB=100
IMAGING_THUMBS_ENABLED=true

# PDF Service (fetches from Imaging API and Hasura)
PDF_PORT=4020
IMAGING_API_URL=http://imaging-service:4010
HASURA_GRAPHQL_URL=http://hasura:8080/v1/graphql
